{
  "name": "monorepo",
  "private": true,
  "description": "A minimalistic routing for React and Preact. Monorepo package.",
  "type": "module",
  "workspaces": [
    "packages/wouter",
    "packages/wouter-preact"
  ],
  "scripts": {
    "fix:p": "prettier --write './**/*.(js|ts){x,}'",
    "test": "vitest",
    "size": "size-limit",
    "build": "npm run build -ws",
    "watch": "concurrently -n wouter,wouter-preact \"npm run -w packages/wouter watch\" \"npm run -w packages/wouter-preact watch\"",
    "lint": "eslint packages/**/*.js",
    "lint-types": "vitest typecheck"
  },
  "author": "Alexey Taktarov <molefrog@gmail.com>",
  "repository": "molefrog/wouter",
  "license": "ISC",
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "printWidth": 80
  },
  "size-limit": [
    {
      "path": "packages/wouter/esm/index.js",
      "limit": "2000 B",
      "ignore": [
        "react",
        "use-sync-external-store"
      ]
    },
    {
      "path": "packages/wouter/esm/use-location.js",
      "limit": "1000 B",
      "ignore": [
        "react",
        "use-sync-external-store"
      ]
    },
    {
      "path": "packages/wouter-preact/esm/index.js",
      "limit": "2000 B",
      "ignore": [
        "preact",
        "preact/hooks"
      ]
    },
    {
      "path": "packages/wouter-preact/esm/use-location.js",
      "limit": "1000 B",
      "ignore": [
        "preact",
        "preact/hooks"
      ]
    }
  ],
  "husky": {
    "hooks": {
      "commit-msg": "npm run fix:p"
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "plugins": [
      "react-hooks"
    ],
    "ignorePatterns": [
      "types/**"
    ]
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@size-limit/preset-small-lib": "^6.0.4",
    "@testing-library/react": "^14.0.0",
    "@types/babel__core": "^7.20.2",
    "@types/react": "^18.2.0",
    "@types/react-test-renderer": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^0.34.3",
    "concurrently": "^8.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jsdom": "^22.1.0",
    "mitt": "^3.0.1",
    "path-to-regexp": "^6.2.1",
    "preact": "^10.0.0",
    "preact-render-to-string": "^6.0.3",
    "prettier": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.4",
    "size-limit": "^6.0.4",
    "typescript": "5.0.4",
    "vitest": "^0.34.3"
  }
}
